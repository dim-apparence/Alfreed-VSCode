    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "eslint": "^8.56.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.3.3",
    "vscode-test": "^1.6.1"
  },
  "dependencies": {
    "path": "^0.12.7",
    "change-case": "^4.1.2",
    "mkdirp": "^3.0.1",
    "play-sound": "^1.1.6"
  }
}
