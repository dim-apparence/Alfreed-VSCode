    "presenter",
    "logic",
    "split",
    "alfreed",
    "stateful",
    "loader",
    "service",
    "template",
    "model",
    "one piece"
  ],
  "icon": "icon.png",
  "activationEvents": [
    "onCommand:koby.createPage",
    "onCommand:koby.createStatefulPage",
    "onCommand:koby.createHermepPage",
    "onCommand:koby.createService",
    "onCommand:koby.createLoader"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Enable sound",
      "properties": {
        "koby.enableSound": {
          "type": "boolean",
          "default": true,
          "description": "Enable sound when creating files ðŸ””"
        }
      }
    },
    "commands": [
      {
        "command": "koby.createPage",
        "title": "ðŸ“˜ Create page: Alfreed",
        "category": "MVVM"
      },
      {
        "command": "koby.createStatefulPage",
        "title": "ðŸ“— Create page: Stateful",
        "category": "MVVM"
      },
      {
        "command": "koby.createHermepPage",
        "title": "ðŸ“• Create page: Hermep",
        "category": "MVVM"
      },
      {
        "command": "koby.createService",
        "title": "ðŸš€ Create service",
        "category": "Koby"
      },
      {
        "command": "koby.createLoader",
        "title": "ðŸ“¦ Create loader",
        "category": "Koby"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "koby.createPage",
          "group": "mvvm"
        },
        {
          "command": "koby.createStatefulPage",
          "group": "mvvm"
        },
        {
          "command": "koby.createHermepPage",
          "group": "mvvm"
        },
        {
          "command": "koby.createService",
          "group": "koby"
        },
        {
          "command": "koby.createLoader",
          "group": "koby"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mkdirp": "^2.0.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.4.6",
