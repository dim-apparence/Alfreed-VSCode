{
  "name": "koby",
  "displayName": "Koby",
  "description": "Generate template for your Flutter app easily (works with vanilla stateful, service, loader, Hermep & Alfreed state libraries)",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.80.0"
  },
  "license": "MIT",
  "publisher": "istornz",
  "categories": [
    "Other"
  ],
  "author": {
    "name": "Dimitri Dessus"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dim-apparence/Koby"
  },
  "keywords": [
    "flutter",
    "mvvm",
    "mvc",
    "generator",
    "hermep",
    "gen",
    "templating",
    "structure",
